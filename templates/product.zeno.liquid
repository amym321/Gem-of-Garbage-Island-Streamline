{% section 'product-template' %}
        <div class="zn-content product">
          {% assign productKey = 'zeno-product-' | append: product.id %}
          <link rel="stylesheet" href="{{ productKey | append: '.css' | asset_url }}">
          {% assign oriProduct = product %} 
          {% include productKey %}
          {% assign product = oriProduct %}
          <script src="{{ productKey | append: '.js' | asset_url }}"></script>
        </div>
      
{% section 'product-sections' %}
{% section 'product-recommendations' %}

{%- if collection -%}
  <div class="text-center">
    <a href="{{ collection.url }}" class="btn btn--tertiary">
      &xlarr; {{ 'products.general.collection_return' | t: collection: collection.title }}
    </a>
  </div>
{%- endif -%}
